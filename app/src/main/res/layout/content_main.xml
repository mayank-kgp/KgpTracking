        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/streetviewpanorama"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:name="com.google.android.gms.maps.StreetViewPanoramaFragment"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Location goes here"
        android:id="@+id/txtOutput"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time"
        android:id="@+id/updatetime"
        android:layout_marginTop="117dp"
        android:layout_below="@+id/txtOutput"
        android:layout_alignParentStart="true" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="103dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/latitude_label"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/latitude_label"
            android:textIsSelectable="true"
            android:text="Latitude Goes Here"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/latitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Latitude:"
            android:textSize="16sp"
            android:layout_marginTop="0dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Longitude:"
            android:layout_marginTop="24dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/longitude_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/longitude_label"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/longitude_label"
            android:textIsSelectable="true"
            android:layout_marginTop="24dp"
            android:text="Longitude Goes Here"
            android:textSize="16sp" />
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/request_activity_updates_button"
        android:onClick="requestActivityUpdatesButtonHandeler"
        android:layout_alignParentLeft="true"
        android:enabled="true"
        android:text="@string/request_activity_updates"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remove_activity_updates_button"
        android:enabled="false"
        android:onClick="removeActivityUpdatesButtonHandeler"
        android:layout_alignParentRight="true"
        android:text="@string/remove_activity_updates"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/detected_activities_title"
        android:textSize="32sp"
        android:id="@+id/detectedActivities"
        android:layout_below="@+id/request_activity_updates_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:textColor="@color/abc_primary_text_material_light"/>
</RelativeLayout>